{
  "name": "cloud-run-function-template",
  "version": "1.0.0",
  "description": "Template for Google Cloud Run functions with GitHub Flow",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && functions-framework --target=helloWorld",
    "dev": "nodemon --exec \"yarn build && functions-framework --target=helloWorld\" --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "deploy": "gcloud functions deploy helloWorld --runtime nodejs22 --trigger-http --allow-unauthenticated"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/test/**/*.test.ts"]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.1.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
